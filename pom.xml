						</configuration>
					</execution>
				</executions>

				<!-- Ensure we download the enforcer rules -->
				<dependencies>
					<dependency>
						<groupId>uk.co.froot.maven.enforcer</groupId>
						<artifactId>digest-enforcer-rules</artifactId>
						<version>0.0.1</version>
					</dependency>
				</dependencies>

			</plugin>
			<!-- for header in all .java files -->
